{
  "name": "platzi-basic-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "NODE_OPTIONS='--es-module-specifier-resolution=node' ts-node src/",
    "start-build": "pnpm build && NODE_OPTIONS='--es-module-specifier-resolution=node' node dist/index.js",
    "dev": "NODE_OPTIONS='--es-module-specifier-resolution=node' tsnd --poll --exit-child --transpile-only ./src/index.ts",
    "dev-node": "nodemon -e ts --exec 'node --loader ts-node/esm src/index.ts'",
    "build": "tsc",
    "fmt": "prettier --write '**/*.{ts,js,json,md}'",
    "lint": "eslint . && prettier --check '**/*.{ts,js,json,md}' && tsc"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.2",
    "@graphql-tools/utils": "^8.6.2",
    "dirname-filename-esm": "^1.1.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "mongodb": "^4.4.1",
    "read-from-fs": "^0.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  }
}
